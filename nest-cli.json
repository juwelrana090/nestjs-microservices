{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/microservices/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/microservices/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/microservices",
  "projects": {
    "logging": {
      "type": "application",
      "root": "apps/logging",
      "entryFile": "main",
      "sourceRoot": "apps/logging/src",
      "compilerOptions": {
        "tsConfigPath": "apps/logging/tsconfig.app.json"
      }
    },
    "microservices": {
      "type": "application",
      "root": "apps/microservices",
      "entryFile": "main",
      "sourceRoot": "apps/microservices/src",
      "compilerOptions": {
        "tsConfigPath": "apps/microservices/tsconfig.app.json"
      }
    },
    "rider": {
      "type": "application",
      "root": "apps/rider",
      "entryFile": "main",
      "sourceRoot": "apps/rider/src",
      "compilerOptions": {
        "tsConfigPath": "apps/rider/tsconfig.app.json"
      }
    }
  }
}